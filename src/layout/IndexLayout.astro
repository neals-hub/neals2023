---
import '../main.css'
---
<script>
	import { myColor } from '../utils/colors.ts';

	document.body.style.backgroundColor = myColor;

	// Récupére toutes les class text-myColor pour attiruber myColor sur les textes
	const txt = document.getElementsByClassName('text-myColor') as HTMLCollectionOf<HTMLElement>;
	Array.from(txt).forEach(element => {
		element.style.color = myColor;
	});

	// Récupére toutes les class bg-myColor pour attiruber myColor sur les background
	const bg = document.getElementsByClassName('bg-myColor') as HTMLCollectionOf<HTMLElement>;
	Array.from(bg).forEach(element => {
		element.style.backgroundColor = myColor;
	});

	// Récupére toutes les class border-myColor pour attiruber myColor sur les border
	const border = document.getElementsByClassName('border-myColor') as HTMLCollectionOf<HTMLElement>;
	Array.from(border).forEach(element => {
		element.style.border = '1px solid' + myColor;
	});
	const borderBottom = document.getElementsByClassName('borderBottom-myColor') as HTMLCollectionOf<HTMLElement>;
	Array.from(borderBottom).forEach(element => {
		element.style.borderBottom = '1px solid' + myColor;
	});

    // Récupére la class wings pour le logo
    const wings = document.getElementsByClassName('wings') as HTMLCollectionOf<HTMLElement>;
    Array.from(wings).forEach(element => {
        element.style.fill = myColor;
    });
</script>

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Neals</title>
	</head>
	<body id="body">
		<main>
			<slot myColor={myColor} />
		</main>
	</body>
</html>